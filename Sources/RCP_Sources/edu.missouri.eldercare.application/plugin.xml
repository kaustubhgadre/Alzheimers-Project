            </action>
         </viewerContribution>-->
         <objectContribution
               adaptable="true"
               id="edu.missouri.eldercare.application.contribution.popup.object"
               nameFilter="*.csv"
               objectClass="org.eclipse.rse.subsystems.files.core.subsystems.IRemoteFile">
            <!--<filter
                  name="csvNature"
                  value="edu.missouri.eldercare.application.csvNature">
            </filter>-->
            <action
                  class="edu.missouri.eldercare.application.actions.DisplayHistoryAction"
                  enablesFor="1"
                  id="edu.missouri.eldercare.application.displayHistoryAction"
                  label="Display"
                  menubarPath="additions"
                  state="false"
                  style="push">
            </action>
            <action
                  class="edu.missouri.eldercare.application.actions.ShowHistogramAction"
                  enablesFor="1"
                  id="edu.missouri.eldercare.application.showHistogramAction"
                  label="Show Histogram"
                  menubarPath="additions"
                  state="false"
                  style="push">
            </action>
         </objectContribution>
      </extension>
  
    
